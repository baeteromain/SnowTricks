{% extends 'base.html.twig' %}
{% block title %}
    Edit Profil
{% endblock %}

{% block body %}
    <h2 class="text-center my-5">Edit profil of {{ user.username }}</h2>
    <div class="container">
        <div class="border border-dark p-4 w-50 m-auto">
            <div class="row">
                <img class="rounded-circle" src="{{ asset('uploads/avatar/' ~ user.avatar) }}" alt="">
                {{ form_start(form) }}
                <div class="text-center">
                    {{ form_row(form.email) }}
                </div>
                <div class="text-center">
                    {{ form_row(form.username) }}
                </div>
                <div class="text-center">
                    {{ form_row(form.avatar) }}
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-danger">Save</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>




{% endblock %}




