{% extends 'base.html.twig' %}

{% block title %}Home - Snow Tricks{% endblock %}

{% block body %}
    <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="{{ asset('uploads/trick/360 1.jpg') }}" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h5 class="text-black-50">Snowtricks</h5>
                </div>
            </div>
            <div class="carousel-item">
                <img src="{{ asset('uploads/trick/360 2.jpg') }}" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="{{ asset('uploads/trick/360 3.jpg') }}" class="d-block w-100" alt="...">
            </div>
            <div class="arrow-down-carousel">
                <a href="#tricks" id="arrow_down"><i class="bi bi-arrow-down-circle-fill"></i></a>
            </div>
        </div>
    </div>

    <section class="container-fluid pt-3">
        <div class="row row-cols-5" id="tricks">
            {% for trick in tricks %}
                <div class="col pb-3">
                    <a href="#" class="text-decoration-none">
                        <div class="card">
                            <img
                                    src="{{ asset('/uploads/trick/' ~ trick.images[0].name  ) }}"
                                    class="card-img-top img-card"
                                    alt=""
                            />
                            <div class="card-body">
                                <h5 class="card-title">
                                    {{ trick.title }}
{#                                    {% if is_granted("ROLE_USER") %}#}
                                    <div class="float-end">
                                        <a href="#"><i class="bi bi-pencil-fill"></i></a>
                                        <a href="#"><i class="bi bi-trash-fill"></i></a>
                                    </div>
{#                                    {% endif %}#}
                                </h5>
                            </div>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
        <div class="d-flex justify-content-center m-5">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
                <span class="ps-2">Load more</span>
        </div>
        <a href="#tricks" id="arrow_down" class="d-flex flex-row-reverse"><i class="bi bi-arrow-up-circle-fill"></i></a>
    </section>
{% endblock %}
