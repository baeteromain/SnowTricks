{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_5_layout.html.twig' %}
{% block title %}
    Ajouter un nouveau trick
{% endblock %}

{% block body %}
    <div class="container">
        <h1>Cr√©er un nouveau trick</h1>

        {{ form_start(form) }}
        {{ form_row(form.title) }}
        {{ form_row(form.category) }}
        {{ form_row(form.description) }}
        <div id="image" data-prototype="{{ form_row(form.images.vars.prototype)|e('html_attr') }}">
            {{ form_row(form.images) }}
            <span></span>
        </div>
        <div id="video" data-prototype="{{ form_row(form.videos.vars.prototype)|e('html_attr') }}">
            {{ form_row(form.videos) }}
            <span id="video_span"></span>
        </div>
        {{ form_row(form.Valider) }}
        {{ form_end(form) }}
    </div>
{% endblock %}
